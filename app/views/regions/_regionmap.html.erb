<div class="regionmap">
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
  <style type="text/css">
    html { height: 100% }
    body { height: 100%; margin: 0; padding: 0 }
    #map-canvas { height: 100% }
  </style>

  <script type="text/javascript">
    function initialize() {

      var mapLatlng = new google.maps.LatLng(<%=@region.restaurants[0].lat%>, <%=@region.restaurants[0].long%>);

      var mapOptions = {
        center: mapLatlng,
        zoom: 16,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
    
      var map = new google.maps.Map(document.getElementById("map-canvas"),
          mapOptions);
      
      var markersArray = [];
    
      <% @region.restaurants.each |restaurant| do %>
        
        var myLatlng = new google.maps.LatLng(<%=restaurant.lat%>, <%=restaurant.long%>);

        var marker = new google.maps.Marker({
          position: myLatlng,
          map: map,
          title:"Hello World!"
        });

        markersArray.push(marker);

      <% end %>

    };

    google.maps.event.addDomListener(window, 'load', initialize);
  
  </script>

  <div id="map-canvas" style="width:500px; height:500px;"/>

</div>
